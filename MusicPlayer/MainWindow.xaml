<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Background="LightGray" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="167" Margin="0">
                <Button x:Name="Playlist" Content="Playlist" Background="{x:Null}" BorderBrush="Black"/>
                <Separator Opacity="0" Height="5"/>
                <Button x:Name="Files" Content="Files" Background="{x:Null}" BorderBrush="Black"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Bottom" Width="Auto" MinWidth="620" HorizontalAlignment="Center" Orientation="Horizontal" Background="#FF514C4C" Margin="0">
                <Button Content="Play" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="175,0,0,0" Click="Button_Click"/>
                <Button Content="Stop" HorizontalAlignment="Center" VerticalAlignment="Center" Width="76"/>
                <Button Content="Pause" HorizontalAlignment="Center" VerticalAlignment="Center" Width="76"/>
            </StackPanel>
            <ListView x:Name="AllMusicTracks" DockPanel.Dock="Top" Width="Auto" Height="Auto" MinWidth="622" MinHeight="380">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Artist}" Header="Artists" Width="200"/>
                        <GridViewColumn DisplayMemberBinding="{Binding SongName}" Header="Songs" Width="450"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
