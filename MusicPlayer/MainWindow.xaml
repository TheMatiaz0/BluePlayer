<Window x:Class="MusicPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left" Background="LightGray" HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="167" Margin="0">
                <Button x:Name="Playlist" Content="Playlist" Background="{x:Null}" BorderBrush="Black" Click="Playlist_Click"/>
                <Separator Opacity="0" Height="5"/>
                <Button x:Name="Files" Content="Files" Background="{x:Null}" BorderBrush="Black" Click="Files_Click"/>
                <Separator Opacity="0" Height="60" />
                <TextBox x:Name="PathInput" Height="23" TextWrapping="Wrap" Text="Path " HorizontalAlignment="Center" Width="167"/>
                <Button x:Name="OkBtn" Content="OK" Click="OkBtn_Click"/>
            </StackPanel>
            
            <StackPanel DockPanel.Dock="Bottom" Margin="10" Background="Gray">
                <Label Name="lblStatus" Content="Not playing..." HorizontalContentAlignment="Center" Margin="5" Background="White" />
                <WrapPanel HorizontalAlignment="Center">
                    <Button Content="Back" Name="BtnBack" Click="BtnBack_Click" />
                    <Button Content="Play" Name="BtnPlay" Click="BtnPlay_Click"/>
                    <Button Content="Pause" Name="BtnPause" Click="BtnPause_Click"/>
                    <Button Content="Stop" Name="BtnStop" Click="BtnStop_Click" />
                    <Button Content="Skip" Name="BtnSkip" Click="BtnSkip_Click" />
                </WrapPanel>
            </StackPanel>

            <ListView x:Name="AllMusicTracks" AllowDrop="True" Drop="AllMusicTracks_Drop" DockPanel.Dock="Top" Width="Auto" MinWidth="622" MinHeight="330" MouseDoubleClick="AllMusicTracks_MouseDoubleClick">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding ID}" Header="ID" Width="25"/>
                        <GridViewColumn DisplayMemberBinding="{Binding SongName}" Header="Song" Width="385"/>
                        <GridViewColumn x:Name="ArtistTab" DisplayMemberBinding="{Binding Artist}" Header="Artist" Width="155"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Extension}" Header="Extension" Width="55"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Grid>
</Window>
