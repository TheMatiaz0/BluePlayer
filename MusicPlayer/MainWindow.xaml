        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:MusicPlayer"
        mc:Ignorable="d"
        Title="Matiaz's Music Player" Height="500" Width="900"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="White"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="25"
        FontFamily="{materialDesign:MaterialDesignFont}" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" WindowStyle="ToolWindow">

    <materialDesign:Card VerticalAlignment="Stretch" UniformCornerRadius="5">
        <Grid>
            <materialDesign:Card UniformCornerRadius="5" Width="600" Height="130">
                <materialDesign:Card.Background>
                    <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                        <LinearGradientBrush.Transform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="240"/>
                                <TranslateTransform X="60"/>
                            </TransformGroup>
                        </LinearGradientBrush.Transform>
                        <GradientStop Color="#FF0764D6" Offset="0.455"/>
                        <GradientStop Color="#FF06094D" Offset="1"/>
                        <GradientStop Color="White" Offset="0.055"/>
                    </LinearGradientBrush>
                </materialDesign:Card.Background>
                <Grid ShowGridLines="True">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="20"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Ellipse ClipToBounds="False" Width="122" Height="120" HorizontalAlignment="Left" Grid.Row="0" Grid.RowSpan="2" Fill="Red" StrokeThickness="6" Grid.Column="0" Grid.ColumnSpan="2"/>

                </Grid>
            </materialDesign:Card>

        </Grid>
    </materialDesign:Card>



